public class Stack {

    Node head;

    class Node {
        int data;
        Node next;

        Node(int data) {
            this.data = data;
        }
    }

    void addFirst(int data) {
        Node newNode = new Node(data);
        newNode.next = head;
        head = newNode;
    }

    void deleteLast() {
        if (head == null) {
            System.out.println("Stack is empty.");
            return;
        }
        if (head.next == null) {
            head = null;
            return;
        }
        Node curr = head;
        while (curr.next.next != null) {
            curr = curr.next;
        }
        curr.next = null;
    }

    void printList() {
        Node curr = head;
        System.out.print("Stack: [");
        while (curr != null) {
            System.out.print(curr.data);
            if (curr.next != null) {
                System.out.print(", ");
            }
            curr = curr.next;
        }
        System.out.println("]");
    }

    public static void main(String[] args) {
        Stack stack = new Stack();

        stack.printList();

        stack.addFirst(10);
        stack.addFirst(20);
        stack.addFirst(30);
        stack.addFirst(40);
        stack.printList(); 

        stack.deleteLast();
        stack.printList(); 

        stack.deleteLast();
        stack.printList();
    }
}
